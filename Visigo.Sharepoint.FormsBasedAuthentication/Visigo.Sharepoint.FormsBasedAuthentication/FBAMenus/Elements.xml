  Description="$Resources:FBAPackMenus, FBASiteConfiguration_Desc;">
		<UrlAction Url="~site/_layouts/FBA/Management/FBASiteConfiguration.aspx" />
	</CustomAction>

	<CustomAction
    Id="FBAUserManagement"
