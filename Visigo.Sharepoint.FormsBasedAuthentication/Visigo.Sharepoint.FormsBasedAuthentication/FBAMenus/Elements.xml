  Title="$Resources:FBAPackMenus, FBARoleManagement_Title;"
  Description="$Resources:FBAPackMenus, FBARoleManagement_Desc;">
		<UrlAction Url="~sitecollection/_layouts/FBA/Management/RolesDisp.aspx" />
	</CustomAction>

